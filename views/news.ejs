<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>News</title>
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital@1&display=swap" rel="stylesheet">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Rye&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="/css/custom.css">
            <link rel="stylesheet" href="/css/style.css"> 
            <style>
                .form-control{
                    border-color: rgb(24, 72, 175);
                }
            </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light navbar1-custom navbar-fixed-top fixed-top"> 
            <a class="navbar-brand" href="/" style="font-weight: 700;text-decoration: none;
            font-size: 28px; margin:0px; padding-left: 30px;">News One</a>
    
            <div class="collapse navbar-collapse searc-bar" id="navbarSupportedContent">
                <form class="form-inline my-2 my-lg-0" action="/search" method="POST">
                    <div class="form-group">
                        <div class="input-group" style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">
                            <input class="form-control mr-sm-2 border-form"  name="search" type="search" placeholder="Search" style="width: 500px;"
                                aria-label="Search" required>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn btn-primary border-form-btn"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </nav>
    

        <div class="news-container">
            <div class="news ">
            <% if(articles.length>0) {%>
                <% articles.forEach(function(article,index){ %>
    
                    <% if ((typeof article.url=='object') || (typeof article.title=='object') || (typeof article.urlToImage=='object') || (typeof article.content=='object')){ %>
                        
                        <% } else{ %>
                            <a href="<%- article.url %>" target="_blank" class="news-box Hover-effect">
    
                                <img src="<%- article.urlToImage %>" alt="Image" style="height: 250px; width:100%;"><br>
                                <h3>
                                    <%- article.title %>
                                </h3>
                                <p style="text-align: justify;">
                                    <% if (article.content.length>20) %>
                                        <%- article.content.substring(0,article.content.indexOf('[')) %><span style="color:rgb(24, 72, 175); text-decoration: underline;">Read More</span> 
                                        <br>
                                </p>
                                <br>
                                <p style="margin-bottom: 0px; position: absolute; right: 10px; bottom: 0; font-family: ui-monospace;">Published on: <span style="color:rgb(24, 72, 175);" ><%- new Date(article.publishedAt.slice(0,10)).toDateString() %>    <%- moment(article.publishedAt).format('hh:mm A');%> </span></p>

                            </a>
                        <% } %>
                <% })  %>
                <% } else { %>
                <div>
                    <p>No news found on this topic: <%- search %></p><br>
                    <span><a href="/" style="text-align: left;">Back to Home</a></span>
                </div>
                <% } %>
            
            </div>
        </div>
            
    </body>
</html>